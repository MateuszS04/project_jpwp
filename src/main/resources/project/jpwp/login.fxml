<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.jpwp.controllers.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <Label text="Logowanie" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="emailField" promptText="Email" maxWidth="250" />
        <PasswordField fx:id="passField" promptText="Hasło" maxWidth="250" />

        <Button text="Zaloguj się" onAction="#onLoginClick" maxWidth="150" />

        <Label fx:id="error"
               text="Nieprawidłowe dane logowania"
               textFill="red"
               visible="false"
               style="-fx-font-size: 12px;" />
    </VBox>
</AnchorPane>

